function Iconv = myImageFilter(I, S)

[IWidth, IHeight] = size(I);
[SWidth, SHeight] = size(S);
SCenter = floor(SWidth/2+1);
padAmount = floor(SWidth/2);

Iconv = zeros(IWidth+2*padAmount, IHeight+2*padAmount);



for x = 1:IWidth
    for y = 1:IHeight
        for i = 1:SWidth
            for j = 1:SHeight
                if x + i - SCenter
                Iconv(x, y) = I(x + i - SCenter, y + j - SCenter) * S(i, j);
            end
        end
    end
end












